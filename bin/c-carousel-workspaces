#!/bin/bash

MAX_WORKSPACE_NUMBER=3
FOCUSED_WORKSPACE=$(c-get-focused-workspace)

if [ "$1" == "up" ]
then
  if [ "$FOCUSED_WORKSPACE" -lt "$MAX_WORKSPACE_NUMBER" ]
  then
    i3-msg workspace number $(($FOCUSED_WORKSPACE + 1))
  else
    i3-msg workspace number 0 
  fi
elif [ "$1" == "down" ]
then
  if [ "$FOCUSED_WORKSPACE" -gt "0" ]
  then
    i3-msg workspace number $(($FOCUSED_WORKSPACE - 1))
  else
    i3-msg workspace number $MAX_WORKSPACE_NUMBER 
  fi
fi





