#!/bin/bash

if [ ! -f "$HOME/bin/runtime/monitor1" ] || [ ! -f "$HOME/bin/runtime/monitor2" ]; then
  echo "Monitor runtime files are missing. Fill the information."
  c-choose-screens
  exit 1
fi

monitor1=`cat $HOME/bin/runtime/monitor1`
monitor2=`cat $HOME/bin/runtime/monitor2`

rm -f "$HOME/.config/i3/config"

sed -e 's/{{monitor1}}/'"$monitor1"'/g' "$HOME/.config/i3/config.template" | sed -e 's/{{monitor2}}/'"$monitor2"'/g' 
