set $mod Mod4
set $mod2 Mod1
set $term gnome-terminal

floating_modifier $mod

font pango:Ubuntu Sans Mono 12 

set $monitor eDP-1 
set $monitor2 HDMI-1  

set $ws1 "1:a"
set $ws2 "2:s"
set $ws3 "3:d"
set $ws4 "4:f"

workspace $ws1 output $monitor
workspace $ws2 output $monitor
workspace $ws3 output $monitor2
workspace $ws4 output $monitor2

bindsym $mod+a workspace $ws1
bindsym $mod+s workspace $ws2
bindsym $mod+d workspace $ws3
bindsym $mod+f workspace $ws4

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+n exec i3-msg move container to workspace $ws1 
bindsym $mod+m exec i3-msg move container to workspace $ws2 
bindsym $mod+comma exec i3-msg move container to workspace $ws3
bindsym $mod+period exec i3-msg move container to workspace $ws4 

bindsym $mod+Shift+n exec i3-msg move container to workspace $ws1 && i3-msg workspace $ws1
bindsym $mod+Shift+m exec i3-msg move container to workspace $ws2 && i3-msg workspace $ws2 
bindsym $mod+Shift+comma exec i3-msg move container to workspace $ws3 && i3-msg workspace $ws3
bindsym $mod+Shift+period exec i3-msg move container to workspace $ws4 && i3-msg workspace $ws4 

bindsym $mod+y resize shrink width 20 px or 5 ppt
bindsym $mod+u resize grow height 20 px or 5 ppt
bindsym $mod+i resize shrink height 20 px or 5 ppt
bindsym $mod+o resize grow width 20 px or 5 ppt

bindsym $mod+t exec i3-msg split h && $term
bindsym $mod+Shift+t exec i3-msg split v && $term 

bindsym $mod+w kill

bindsym $mod+colon exec "rofi -show run"
bindsym $mod+Shift+colon exec "i3-msg split v && rofi -show run"

bindsym $mod+slash exec "rofi -show window" 
bindsym $mod+g fullscreen toggle

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+v focus parent
bindsym $mod+c focus child 

bindsym $mod+Shift+p reload
bindsym $mod+p restart

bindsym $mod+Shift+e exec i3-msg exit

bindsym Mod1+Tab workspace back_and_forth
bindsym Control+Mod1+l exec ~/bin/c-screensaver.sh 

bindsym $mod+F5 exec "sudo brightlight -p -d 4"
bindsym $mod+F6 exec "sudo brightlight -p -i 4"
bindsym $mod+F8 exec --no-startup-id "bash ~/bin/c-screentoggle.sh $monitor $monitor2"

bindsym $mod+F10 exec "amixer -q sset Master,0 toggle && amixer -q sset Speaker,0 unmute && amixer -q sset Headphone,0 unmute"
bindsym $mod+F11 exec "amixer -q sset Master,0 3- unmute"
bindsym $mod+F12 exec "amixer -q sset Master,0 3+ unmute"

bindsym $mod+5 exec "sudo brightlight -p -d 4"
bindsym $mod+6 exec "sudo brightlight -p -i 4"
bindsym $mod+8 exec --no-startup-id "bash ~/bin/c-screentoggle.sh $monitor $monitor2"

bindsym $mod+0 exec "amixer -q sset Master,0 toggle && amixer -q sset Speaker,0 unmute && amixer -q sset Headphone,0 unmute"
bindsym $mod+minus exec "amixer -q sset Master,0 3- unmute"
bindsym $mod+equal exec "amixer -q sset Master,0 3+ unmute"

bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 3- unmute"
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 3+ unmute"

exec --no-startup-id nm-applet
exec --no-startup-id redshift

# enables tap to click and middle click emulation
exec ~/bin/c-setup-touchpad.sh 12 280 288
exec --no-startup-id compton -b

exec_always --no-startup-id "/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh"
exec_always --no-startup-id ~/bin/c-polybarBootstrap.sh
exec_always --no-startup-id feh --bg-scale /home/chapa/Pictures/background.jpg 

# https://thomashunter.name/i3-configurator/
# colors
client.focused          #FF003F #FF003F #FFFFFF #2E9EF4   #285577
client.focused_inactive #5F676A #5F676A #FFFFFF #484E50   #5F676A
client.unfocused        #333333 #333333 #888888 #292D2E   #222222
client.urgent           #FF003F #FF003F #FFFFFF #FF003F   #ff003f
client.placeholder      #0C0C0C #0C0C0C #FFFFFF #000000   #0C0C0C

client.background       #FFFFFF


